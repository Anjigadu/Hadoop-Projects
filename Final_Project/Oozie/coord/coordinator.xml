<coordinator-app name="twitter-coord" frequency="${coord:hours(-1)}"
                 start="2017-01-01T00:01Z" end="2018-01-01T08:01Z"
                 timezone="UTC"
                 xmlns="uri:oozie:coordinator:0.1"
                 xmlns:sla="uri:oozie:sla:0.1">
    <action>
        <workflow>
            <app-path>${workflowPath}</app-path>
            <configuration>
                <property>
                    <name>jobTracker</name>
                    <value>${jobTracker}</value>
                </property>
                <property>
                    <name>namenode</name>
                    <value>${namenode}</value>
                </property>
                <property>
                    <name>app_scripts</name>
                    <value>${app_scripts}</value>
                </property>
                <property>
                    <name>app_lib</name>
                    <value>${app_lib}</value>
                </property>
                <property>
                    <name>techJobTweetHDFSPath</name>
                    <value>${techJobTweetHDFSPath}</value>
                </property>
                <property>
                    <name>iyear</name>
                    <value>${YEAR}</value>
                </property>
                <property>
                    <name>imonth</name>
                    <value>${MONTH}</value>
                </property>
                <property>
                    <name>iday</name>
                    <value>${DAY}</value>
                </property>
                <property>
                    <name>ihour</name>
                    <value>${HOUR}</value>
                </property>
            </configuration>
        </workflow>
    </action>
</coordinator-app>
